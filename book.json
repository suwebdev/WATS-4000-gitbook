{
    "gitbook": "3.x.x",
    "plugins": ["exercises","quiz", "youtube", "responsive-iframes"],
    "links": {
        "sidebar": {
            "by Shawn Rider": "http://shawnrider.com"
        }
    },
    "pluginsConfig": {
        "theme-default": {
            "showLevel": true
        },
        "quiz": {
            "labels": {
                "check"             : "Check my answers",
                "showExplanation"   : "Explain", 
                "showCorrect"       : "Show all",   
                "explanationHeader" : "Explanation"
            },
            "text": {
                "noChosen"    : "Choose at least one answer",  
                "incomplete"  : "Some correct answers are missing" 
            },
            "buttons": {
                "showCorrect"       : true, 
                "showExplanation"   : true 
            }
        }
    },

    "pdf": {
        "pageNumbers": false,
        "fontSize": 12,
        "paperSize": "a4",
        "margin": {
            "right": 62,
            "left": 62,
            "top": 36,
            "bottom": 36
        },
        "headerTemplate": null,
        "footerTemplate": null
    }
}